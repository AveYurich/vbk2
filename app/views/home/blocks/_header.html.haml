%header#header
  / BEGIN MENU
  .menu_area
    %nav.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
      .container
        .navbar-header
          / FOR MOBILE VIEW COLLAPSED BUTTON
          %button.navbar-toggle.collapsed{ aria: { controls: 'navbar', expanded: false },
                                           data: { target: '#navbar', toggle: 'collapse' },
                                           type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          / LOGO
          / TEXT BASED LOGO
          = link_to '#', class: 'navbar-brand' do
            Single
            %span Pro
          / IMG BASED LOGO
          / <a class="navbar-brand" href="#"><img src="img/logo.png" alt="logo"></a>
        #navbar.navbar-collapse.collapse
          %ul#top-menu.nav.navbar-nav.navbar-right.main_nav
            %li.active
              = link_to 'Home', '#'
            %li
              = link_to 'About', '#about'
            %li
              = link_to 'Services', '#service'
            %li
              = link_to 'Works', '#works'
            %li
              = link_to 'Team', '#team'
            %li
              = link_to 'Pricing', '#pricing'
            %li
              = link_to 'Blog', '#blog'
            %li
              = link_to 'Contacts', '#contact'
        / /.nav-collapse
  / END MENU
  / BEGIN SLIDER AREA
  .slider_area
    / BEGIN SLIDER
    #slides
      %ul.slides-container
        / THE FIRST SLIDE
        %li
          / FIRST SLIDE OVERLAY
          .slider_overlay
          / FIRST SLIDE MAIN IMAGE
          = image_tag('full-slider/full-slide1.jpg', alt: 'img')
          / FIRST SLIDE CAPTION
          .slider_caption
            %h2 Hi,We are Ultramodern Single pro
            %p we are a group of experienced designers and developers
            %a.slider_btn{:href => "#"} Who We are
        / THE SECOND SLIDE
        %li
          / SECOND SLIDE OVERLAY
          .slider_overlay
          / SECOND SLIDE MAIN IMAGE
          = image_tag('full-slider/full-slide1.jpg', alt: 'img')
          / SECOND SLIDE CAPTION
          .slider_caption
            %h2 Hi,We are Ultramodern Single pro
            %p we are a group of experienced designers and developers
            %a.slider_btn{:href => "#"} Who We are
        / THE THIRD SLIDE
        %li
          / THIRD SLIDE OVERLAY
          .slider_overlay
          / THIRD SLIDE MAIN IMAGE
          = image_tag('full-slider/full-slide1.jpg', alt: 'img')
          / THIRD SLIDE CAPTION
          .slider_caption
            %h2 we'll change your Idea of Design
            %p we are a group of experienced designers and developers
            %a.slider_btn{:href => "#"} Who We are
      / BEGAIN SLIDER NAVIGATION
      %nav.slides-navigation
        / PREV IN THE SLIDE
        = link_to '/item1' do
          %span.icon-wrap
          %h3
            %strong Prev
        / NEXT IN THE SLIDE
        = link_to '/item3' do
          %span.icon-wrap
          %h3
            %strong Next
    / END SLIDER
  / END SLIDER AREA